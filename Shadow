local target = game.Players:FindFirstChild("yaoshen21") -- 替换为目标玩家的名字
local player = game.Players.LocalPlayer
local chr = player.Character or player.CharacterAdded:Wait()

-- 等待目标玩家的角色加载
local targetCharacter = target.Character or target.CharacterAdded:Wait()

-- 获取玩家的HumanoidRootPart
local humanoidRootPart = chr:WaitForChild("HumanoidRootPart")
local targetHumanoidRootPart = targetCharacter:WaitForChild("HumanoidRootPart")

-- 创建BodyGyro来固定方向
local bodyGyro = Instance.new("BodyGyro", humanoidRootPart)
bodyGyro.MaxTorque = Vector3.new(0, 0, 0) -- 禁用旋转，锁定方向
bodyGyro.CFrame = CFrame.new(humanoidRootPart.Position) * CFrame.Angles(math.rad(-90), 0, 0) -- 朝上

-- 创建BodyPosition来控制位置
local bodyPosition = Instance.new("BodyPosition", humanoidRootPart)
bodyPosition.MaxForce = Vector3.new(100000, 100000, 100000)
bodyPosition.D = 10
bodyPosition.P = 10000

local followDistance = 5 -- 距离目标玩家的距离

game:GetService("RunService").Heartbeat:Connect(function()
    if targetCharacter and targetCharacter:FindFirstChild("HumanoidRootPart") then
        -- 设置玩家的位置位于目标玩家的底下
        local targetPos = targetHumanoidRootPart.Position - Vector3.new(0, followDistance, 0)
        bodyPosition.Position = targetPos

        -- 更新方向为朝上
        bodyGyro.CFrame = CFrame.new(humanoidRootPart.Position) * CFrame.Angles(math.rad(-90), 0, 0)
    end
end)
